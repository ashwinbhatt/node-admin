<%- include('partials/header') %>

<body>

    <button onclick="logoutReq()" class="btn btn-outline-danger">Logout</button>
    <h5>Logged in as <span class="badge badge-secondary"><%= logged_user%></span></h5>

	<blockquote class="blockquote text-center">
		<p class="mb-0 display-3">Update password</p>
	</blockquote>
    <div class="container">
        <form name='form'>
            <div id="alertDialogue" class="alert alert-danger" hidden></div>


            <div class="row">
                <label class="col-6 text-align-right" style="font-size: 1.5em;font-weight: bolder;" for='password'>
                    Password
				</label>
                <div class="col-6">
					<input type="password" id="password" name="password" placeholder="New Password"></input>
                </div>
            </div>

            <div class="row">
                <label class="col-6 text-align-right" style="font-size: 1.5em;font-weight: bolder;" for='rePassword'>
                    Retype Password
				</label>
                <div class="col-6">
					<input type="password" id="rePassword" name="rePassword" placeholder="Re-Type Password again"></input>
                </div>
            </div>

            <div>
                <div class="row">
                    <div class="col-5"></div>
                    <div class="col-3 btn btn-outline-success text-align-right">
                        <div style="font-size: 1.5em;font-weight: bolder;" onclick="updatePassReq()">Login</div>
                    </div> 
                </div>
            </div>
        </form>

    </div>
</body>

<%- include('partials/footer') %>